<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/input_bg_active</item>
        <item name="android:maxHeight">@dimen/gp_bottomsheet_max_height</item>
    </style>

    <style name="GPCheckboxStyle">
        <item name="colorControlNormal">@color/gp_bg_default_light</item>
        <item name="colorAccent">@color/gp_bg_default_dark</item>
    </style>


    <style name="GPIconBackground">
        <item name="android:background">@drawable/ic_background_base</item>
        <item name="android:padding">0dp</item> <!-- Adjust as needed -->
    </style>

    <!-- Size variations -->
    <style name="GPIconBackground.Small">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="GPIconBackground.Medium">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="GPIconBackground.Default">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="GPIconBackground.Big">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="GPIconBackground.Large">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="GPIconBackground.LargePlus">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="GPIconBackground.SLarge">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
    </style>

</resources>